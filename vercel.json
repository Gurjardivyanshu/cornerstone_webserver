{
  "rewrites": [
    {
      "source": "/:folder/",
      "destination": "/:folder/index.html"
    },
    {
      "source": "/:folder/:file/",
      "destination": "/:folder/:file/index.html"
    },
    {
      "source": "/:folder/:file",
      "destination": "/:folder/:file.html"
    }
  ],
  "redirects": [
    {
      "source": "/:folder/index.html",
      "destination": "/:folder/",
      "permanent": true
    },
    {
      "source": "/:folder/:file.html",
      "destination": "/:folder/:file",
      "permanent": true
    },
    {
      "source": "/:folder/:file/index.html",
      "destination": "/:folder/:file/",
      "permanent": true
    }
  ]
}
